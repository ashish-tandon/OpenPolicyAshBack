# OpenPolicy Database Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=opencivicdata
DB_USER=openpolicy
DB_PASSWORD=openpolicy123

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Federal Bills Priority (Enhanced monitoring)
FEDERAL_PRIORITY_ENABLED=true
FEDERAL_CHECK_INTERVAL=4  # hours
FEDERAL_AI_SUMMARIES=true

# Data Enrichment
OPENAI_API_KEY=your_openai_api_key_here
AI_SUMMARIES_ENABLED=true
CROSS_REFERENCE_ENABLED=true

# Rate Limiting
API_RATE_LIMIT=1000  # requests per hour per IP
API_RATE_LIMIT_ENABLED=true

# Security
API_KEY_REQUIRED=false
JWT_SECRET_KEY=your_secret_key_here

# Monitoring
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:admin

# Data Quality
QUALITY_CHECKS_ENABLED=true
QUALITY_ALERT_THRESHOLD=90  # percentage

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Development/Production
ENVIRONMENT=development
DEBUG=true

# External Services
WEBHOOK_URL=your_webhook_url_here
NOTIFICATION_EMAIL=admin@yourorganization.com